#ifndef YARP_CONFIG_VERSION_H
#define YARP_CONFIG_VERSION_H

#define YARP_VERSION_MAJOR ${YARP_VERSION_MAJOR}
#define YARP_VERSION_MINOR ${YARP_VERSION_MINOR}
#define YARP_VERSION_PATCH ${YARP_VERSION_PATCH}
#define YARP_VERSION_TWEAK ${YARP_VERSION_TWEAK}
#define YARP_VERSION "${YARP_VERSION}"
#define YARP_VERSION_SHORT "${YARP_VERSION_SHORT}"

#define YARP_VERSION_ENCODE(MAJOR, MINOR, PATCH) \
    (((MAJOR) * 0x10000) + ((MINOR) * 0x100) + (PATCH))

#define YARP_VERSION_HEX \
    YARP_VERSION_ENCODE(YARP_VERSION_MAJOR, YARP_VERSION_MINOR, YARP_VERSION_PATCH)

#define YARP_VERSION_COMPARE(OP, MAJOR, MINOR, PATCH) \
    (YARP_VERSION_HEX OP YARP_VERSION_ENCODE((MAJOR), (MINOR), (PATCH)))

#endif
